

<% if @image.errors.any? %>
  <h2>There were errors saving your pic</h2>
  <ul>
    <% @image.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @image, :html => {:multipart => true} do |f| %>
  <fieldset>
    <div class='field'>
      <%= f.file_field :image if @image.new_record? %>

      <%= f.fields_for :comments, @image.comments.build do |c| %>
        <%= c.label :comments %>
        <%= c.text_area :content %>
      <% end %>


  </fieldset>
  <%= f.submit "Submit" %>
<% end %>


